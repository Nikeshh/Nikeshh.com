generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  name      String
  avatarUrl String   @db.Text
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)

  @@index([id])
}

model Testimonials {
  id             String   @id @default(uuid())
  content        String   @db.Text
  avatarUrl      String   @db.Text
  name           String   @db.Text
  designation    String   @db.Text
  featured       Boolean  @default(false)
  companyLogoUrl String   @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Blogs {
  id        String   @id @default(uuid())
  title     String   @db.Text
  subtitle  String   @db.Text
  category  String   @db.Text
  featured  Boolean  @default(false)
  likes     Int      @default(0)
  dislikes  Int      @default(0)
  imageUrl  String   @db.Text
  content   String   @db.Text
  tags      String   @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skills {
  id        String   @id @default(uuid())
  name      String   @db.Text
  title     String   @db.Text
  category  String   @db.Text
  imageUrl  String   @db.Text
  content   String   @db.Text
  points    String   @default("[]")
  tags      String   @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Services {
  id          String   @id @default(uuid())
  name        String   @db.Text
  title       String   @db.Text
  subtitle    String   @db.Text
  category    String   @db.Text
  subcategory String   @db.Text
  imageUrl    String   @db.Text
  content     String   @db.Text
  tags        String   @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Projects {
  id        String   @id @default(uuid())
  name      String   @db.Text
  title     String   @db.Text
  subtitle  String   @db.Text
  category  String   @db.Text
  imageUrl  String   @db.Text
  content   String   @db.Text
  tags      String   @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}
